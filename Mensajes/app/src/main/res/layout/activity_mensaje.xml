<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dp" >

<TextView
    android:typeface="monospace"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Para:"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/textView"
    android:layout_below="@+id/btnInbox"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="20dp" />

<EditText
    android:id="@+id/mobileNumber"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="Ingrese telefono o contacto"
    android:phoneNumber="true"
    android:layout_below="@+id/textView"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="20dp">
</EditText>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mensaje: "
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:id="@+id/textView2"
    android:layout_below="@+id/mobileNumber"
    android:layout_marginTop="40dp" />

<EditText
    android:id="@+id/smsBody"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:hint="Escribir mensaje"
    android:layout_below="@+id/textView2"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="20dp" />



    <Button
        android:id="@+id/send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_above="@+id/btnRead"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Entrada"
        android:id="@+id/btnInbox"
        android:onClick="inbox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/mobileNumber"
        android:layout_alignEnd="@+id/mobileNumber"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leer"
        android:id="@+id/btnRead"

        android:layout_alignTop="@+id/btnCancel"
        android:layout_alignRight="@+id/smsBody"
        android:layout_alignEnd="@+id/smsBody" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btnCancel"

        android:layout_alignParentBottom="true" />


</RelativeLayout>

