<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:layout_weight="0.09">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city_name_default"
            android:id="@+id/cityText"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_default_text"
            android:id="@+id/weekDayText"
            android:textColor="#00ffff"
            android:textSize="15sp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_default_text"
            android:id="@+id/dateText"
            android:textColor="#00ffff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/weekDayText"
            android:layout_alignLeft="@+id/weekDayText"
            android:layout_alignStart="@+id/weekDayText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_temperature"
            android:id="@+id/temperatureText"
            android:textColor="#00ffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_alignTop="@+id/cityText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#004d4a"
        android:layout_height="0dp"
        android:layout_weight="0.24">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/streetsView"
            android:src="@drawable/street_arrows"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/defaultMainStreet"
            android:textSize="18sp"
            android:id="@+id/mainStreet"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_alignBottom="@+id/streetsView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/defaultSpeed"
            android:id="@+id/speed"
            android:textSize="70sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/mainStreet"
            android:layout_toStartOf="@+id/mainStreet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km/h"
            android:id="@+id/speedUnit"
            android:layout_alignBaseline="@+id/speed"
            android:layout_alignBottom="@+id/speed"
            android:layout_alignLeft="@+id/mainStreet"
            android:layout_alignStart="@+id/mainStreet"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="12:30"
            android:id="@+id/time"
            android:textSize="70sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_alignTop="@+id/speed"
            android:layout_toRightOf="@+id/speedUnit"
            android:layout_toEndOf="@+id/speedUnit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="am"
            android:id="@+id/textView"
            android:textColor="#FFFFFF"
            android:layout_alignBaseline="@+id/time"
            android:layout_alignBottom="@+id/time"
            android:layout_toRightOf="@+id/time"
            android:layout_toEndOf="@+id/time"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ef404a"
        android:layout_height="0dp"
        android:layout_weight="0.15">

    </RelativeLayout>
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45">

        </GridLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:background="#000000"
        android:layout_weight="0.07">

        </RelativeLayout>

</LinearLayout>