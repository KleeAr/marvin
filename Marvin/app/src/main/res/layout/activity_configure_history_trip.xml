<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4db6ac">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ajustes para el almacenado de los viajes. Establezca el recorrido/tiempo minimo para almacenar un viaje. En caso que no se elija ninguna opciÃ³n se guardaran todos los viajes realizados."
        android:id="@+id/descripcion"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#4db6ac" />


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#004d4a"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal|bottom"></View>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Establecer recorrido [Kms] minimo"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left|center" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner1"
            android:layout_gravity="right"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Establecer tiempo [min] minimo"
            android:id="@+id/textView8"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left|center" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_weight="1"
            android:spinnerMode="dropdown" />

    </LinearLayout>


</LinearLayout>