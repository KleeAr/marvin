<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ar.com.klee.marvin.activities.MainMenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camara"
        android:id="@+id/bt_camara"
        android:layout_below="@+id/tv_menuPrincipal"
        android:layout_centerHorizontal="true"
        android:onClick="openCamera" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/bt_salir"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="exit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MENU PRINCIPAL"
        android:id="@+id/tv_menuPrincipal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/bt_play"
        android:layout_below="@+id/bt_camara"
        android:layout_centerHorizontal="true"
        android:onClick="startPauseMusic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/bt_next"
        android:layout_below="@+id/bt_play"
        android:layout_centerHorizontal="true"
        android:onClick="nextSong" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREVIOUS"
        android:id="@+id/bt_previous"
        android:layout_below="@+id/bt_next"
        android:layout_centerHorizontal="true"
        android:onClick="previousSong" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAUSE"
        android:id="@+id/bt_pause"
        android:layout_alignTop="@+id/bt_play"
        android:layout_centerHorizontal="true"
        android:onClick="startPauseMusic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/song"
        android:layout_below="@+id/bt_previous"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/artist"
        android:layout_below="@+id/song"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
