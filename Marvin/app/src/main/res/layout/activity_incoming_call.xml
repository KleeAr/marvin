<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:configChanges="orientation|screenSize"
    tools:context="ar.com.klee.marvin.activities.IncomingCallActivity"
    android:background="#4db6ac">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Llamada entrante"
        android:id="@+id/toCall"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp"
        android:gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom|center"
        android:id="@+id/layout"
        android:layout_below="@+id/toCall">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/btnAceptar"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:drawableLeft="@mipmap/ic_call_white_48dp"
        android:background="@drawable/button_incoming_accept"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:enabled="false" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rechazar"
        android:id="@+id/btnRechazar"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/ic_call_end_white_48dp"
        android:background="@drawable/button_incoming_reject"
        android:textSize="35sp"
        android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>